{# src/Wyg/WygBundle/Resources/views/Page/contact.html.twig #}
{% extends 'WygWygBundle::layout.html.twig' %}

{% block title %}User{% endblock%}

{% block body %}
    <header>
        {% if mode == "edit" %}
        <h1>Edit user</h1>
        {% else %}
        <h1>Create new user</h1>
        {% endif %}
    </header>

    {% if mode == "edit" %}
    <p>Modify your profile information here...</p>
    {% else %}
    <p>Add your profile information here...</p>
    {% endif %}

    <div class="formDialog">
    <form action="{{ path('WygWygBundle_user_register') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        <fieldset>
            <legend>Global info</legend>
            <br />
            {{ form_row(form.username) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
        </fieldset>
        <br />

        <fieldset>
            <legend>Authentication</legend>
            <br />
            {{ form_row(form.password) }}
        </fieldset>

        <br />
        {{ form_rest(form) }}

        {% if mode == "edit" %}
        <input type="submit" value="Modify profile" />
        {% else %}
        <input type="submit" value="Create profile" />
        {% endif %}

    </form>
        </div>
{% endblock %}